<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/moment_user_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/user3"
            android:scaleType="centerCrop"/>
        <TextView
            android:text="Chenleely"
            android:textColor="@color/grey_level_3"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/moment_user_avatar"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/comment_item_user_name"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_context"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:text=".\n .\n .\n .\n"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/comment_update_time"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="两小时前"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_level_3"/>

</LinearLayout>